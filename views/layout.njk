                    <li><a class="dropdown-item" href="/paymentreceived">New payment</a></li>
                    <li><a class="dropdown-item" href="/paymenthistory">Payments received</a></li>
                  </ul>
                </li>
                <li>
                  <span class="dropdown-item" href="#">Debts &raquo;</span>
                  <ul class="dropdown-menu dropdown-submenu">
                    <li><a class="dropdown-item" href="/newdebts">New debt/history</a></li>
                    <li><a class="dropdown-item" href="/paymentmade">New payment</a></li>
                    <li><a class="dropdown-item" href="/paymenthistorydebt">Payments made</a></li>
                  </ul>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/categories">Categories</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/signout">Sign out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <div class="container">
    {% block content %}
    {% endblock %}
  </div>
<script src="/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>