{% extends 'layout.njk' %}

{% block content %}
  
  <h2>History of payments made</h2>

  {# <h5 style="margin-top: 2em; margin-bottom: 1em;">Credits table (reference for credit id)</h5> #}

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">Debt ID</th>
        <th scope="col" class="text-center">Receiver</th>
        <th scope="col" class="text-center">Amount</th>
        <th scope="col" class="text-center">Date</th>
        <th scope="col" class="text-center">Description</th>
      </tr>
    </thead>
    <tbody id="js-tbl-credits" class="table-group-divider">
    {% for p in paymentLines %}
      <tr>
        <td scope="col" class="text-center">{{loop.index}}</td>
        <td scope="col" class="text-center">{{p.debtId}}</td>
        <td scope="col" class="text-center">{{p.receiver}}</td>
        <td scope="col" class="text-center js-debt-amount">{{p.amount}}</td>
        <td scope="col" class="text-center js-debt-date">{{p.date}}</td>
        <td scope="col" class="text-center">{{p.description}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <script src="/javascripts/paymenthistorydebt.js"></script>
{% endblock %}