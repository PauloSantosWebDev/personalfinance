{% extends 'layout.njk' %}

{% block content %}
  
  <h2>Register new credits</h2>
  <form class="row g-3" method="post" action="/newcredits"> 
    <div class="col-md-2">
      <label for="inputCategory" class="form-label">Category</label>
      <select id="inputCategory" name="inputCategory" class="form-select">
        <option selected>Choose...</option>
        {% for l in lines %}
          <option>{{l.category}}</option>
        {% endfor %}
      </select>
    </div>
    <div class="col-md-2">
      <label for="inputDateCreated" class="form-label">Date</label>
      <input type="date" class="form-control" id="inputDateCreated" name="inputDateCreated">
    </div>
    <div class="col-md-2">
      <label for="inputAmount" class="form-label">Amount</label>
      <input type="number" min="0.00" step="0.01" class="form-control" id="inputAmount" name="inputAmount">
    </div>
    <div class="col-md-2">
      <label for="inputDebtor" class="form-label">Debtor's name</label>
      <input type="text" class="form-control" id="inputDebtor" name="inputDebtor">
    </div>
    <div class="col-md-4">
      <label for="inputDescription" class="form-label">Description</label>
      <input type="text" class="form-control" id="inputDescription" name="inputDescription">
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-success">Register</button>
    </div>
  </form>
{% endblock %}